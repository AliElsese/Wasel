<%- include('include/_headerAdmin') %>

<div class="content">
    <div class="container mt-5 mb-5">
        <div class="row">
            <% for(var i = 0; i < orders.length; i++) { %>
        
                <div class="col-md-6 mb-3">
                    <div class="card p-5">
                        <div class="col-md-12 text-center">
                            <h2 class="mt-4"><%= orders[i].userName %></h2>
                            <h3 class="mt-4"><%= orders[i].userAddress %></h3>
                            <h4 class="mt-4"><%= orders[i].userPhone %></h4>
                            <div class="row">
                                <a href="/single-proOrder/<%= orders[i].orderid %>" class="btn mt-3">تفاصيل الطلب</a>
                                <a href="/api-deleteProOrder/<%= orders[i].orderid %>"  class="btn mt-3"> 
                                    حذف الطلب 
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
    
            <% } %>
        </div>
    </div>
</div>

<%- include('include/_footerAdmin') %>