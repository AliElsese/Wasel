<%- include('include/_header') %>

<!-- Start Nav Bar -->
<header class="header-one">
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand" href="/"><img src="/img/logo.png" alt=""></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>

                <div class="collapse navbar-collapse main-menu-item "
                id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto text-center">
                        <li class="nav-item">
                            <a class="nav-link" href="/">الرئيسيه</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/products">المنتجات</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/about">تعرف علينا</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/contact">تواصل معنا</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/cart">
                                <i class="fa fa-shopping-cart"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
</header>
<!-- End Nav Bar -->

<!-- Start breadcrumb Area -->
<div class="page-area" style="background-image: url(/img/box3.jpg);">
    <div class="breadcrumb-overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="breadcrumb">
                    <div class="section-headline">
                        <h3 class="text-white pt-3">المنتجات</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="breadcrumb-row">
    <div class="container">
        <ul class="list-inline pl-3">
            <li><a href="/" class="active">الرئيسيه</a></li>
            <li><i class="fas fa-chevron-left text-white m-1"></i></li>
            <li><a href="/products">المنتجات</a></li>
        </ul>
    </div>
</div>
<!-- End breadcrumb Area -->

<div class="row m-5">

    <div class="col-xs-12 col-md-3 text-right mb-3">
        <h3 class="mb-2">الأقسام</h3>
        <ul class="list-group">
            <li class="list-group-item">
                <a href="/products" style="color: #54c5da;">جميع المنتجات</a>
            </li>
            <% for(var i = 0; i < categories.length; i++) { %>
                <li class="list-group-item">
                    <a href="/products/<%= categories[i].cataname %>" style="color: #54c5da;"><%= categories[i].cataname %></a>
                </li>
            <% } %>
        </ul>
    </div>
    <div class="col-xs-12"></div>
    <div class="col-xs-12 col-md-8">
        
            <div class="row">

                <% for(var i = 0; i < products.length; i++) { %>
                    <div class="col-md-4 col-sm-12 mb-5">
                        <div class="product-grid3">
                            <div class="product-image3">
                                <a href="#">
                                    <img class="pic-1" src="/<%= products[i].productimage %>" style="height: 280px;width: 100%;">
                                </a>
                                <ul class="social">
                                    <li><a href="/single-product/<%= products[i].productid %>"><i class="fas fa-eye"></i></a></li>
                                    <li>
                                        <form action="/add-to-cart" method="post">
                                            <input type="hidden" name="id" value="<%= products[i].productid %>">
                                            <button type="submit"><i class="fa fa-shopping-cart"></i></button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                            <div class="product-content col-md-12 text-center">
                                <h3 class="title">
                                    <%= products[i].productname %>
                                </h3>
                                <div class="price">
                                    <%= products[i].productprice %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        
    </div>

</div>

<%- include('include/_footer') %>